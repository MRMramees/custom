<odoo>
  <data>
     <record id="view_test_report_id_tree" model="ir.ui.view">
        <field name="name">stock_test</field>
        <field name="model">bi.stock.tracking</field>
        <field name="arch" type="xml">
            <tree>

                <field name="picking_from_id"/>
                <field name="transit_id"/>
                <field name="dest_location_id"/>
                <field name="operation_type_id"/>
                <field name="scheduled_date"/>
                <field name="product_id"/>
                <field name="qty"/>
                <field name="qty2"/>
                <field name="move_type" />
                <field name="company_id" />
                <field name="name" />

            </tree>
        </field>
     </record> 




    <record id="view_test_report_form" model="ir.ui.view">
        <field name="name">stock_test1</field>
        <field name="model">bi.stock.tracking</field>
        <field name="arch" type="xml">
            <form string="Choose The Details">
            
            <header>
                   <button name="reserve" type="object" class="oe_highlight"  string="Reserve To Transit">     
                   </button>
                   <button name="validate" type="object" class="oe_highlight" string="Tansfer To Destination">     
                   </button> 
              </header>
              <sheet>
                <!-- <group> -->
                
                    <group>
                        <field name="name" />
                    </group>

                    <group>
                        <group>
                        <field name="picking_from_id"/>
                        <field name="transit_id"/>
                        <field name="dest_location_id"/>
                        </group>
                        <group>
                        <field name="scheduled_date"/>
                        </group>
                    </group>

                    <group>
                        <group>
                            <field name="product_id"/>
                            <field name="qty"/>
                            <field name="qty2"/>
                            <field name="product_uom_id" />
                        </group>

                        <group>
                            <field name="operation_type_id"/>
                            <field name="move_type" />
                            <field name="company_id" />
                        </group>
                    </group>
            </sheet>
              
            </form>
        </field>
    </record> 


    <record id="view_test_report_action" model='ir.actions.act_window'>
        <field name="name">bi_stock_tracking</field>
        <field name="res_model">bi.stock.tracking</field>
        <field name="view_mode">tree,form</field>  
    </record>


  <menuitem
    id="b2_test_root_menu"
    name="TRACKING"
    action="view_test_report_action"
    sequence="10"/>


  </data>
</odoo>




     