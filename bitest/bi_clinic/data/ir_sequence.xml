<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Sequence for Patient -->
        <record id="seq_clinic_patient" model="ir.sequence">
            <field name="name">Patient Sequence</field>
            <field name="code">bi.clinic.patient.sequence</field>
            <field name="prefix">PA/</field>
            <field name="padding">4</field>
            <field name="company_id" eval="False"/>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
        </record>

        <!-- Sequence for Appointment -->
        <record id="seq_clinic_appointment" model="ir.sequence">
            <field name="name">Appointment Sequence</field>
            <field name="code">bi.clinic.appointment.sequence</field>
            <field name="prefix">AP/%(range_year)s/</field>
            <field name="padding">5</field>
            <field name="company_id" eval="False"/>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
        </record>

        <!-- Sequence for Lab Test Sequence -->
        <record id="seq_lab_test_request_sequence" model="ir.sequence">
            <field name="name">Lab Test Request Sequence</field>
            <field name="code">bi.clinic.lab.test.request.sequence</field>
            <field name="prefix">LT/%(range_year)s/</field>
            <field name="padding">5</field>
            <field name="company_id" eval="False"/>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
        </record>

        <!-- Sequence for Prescription -->
        <record id="seq_prescription_sequence" model="ir.sequence">
            <field name="name">Prescription Sequence</field>
            <field name="code">bi.clinic.prescription.sequence</field>
            <field name="prefix">PR/%(range_year)s/</field>
            <field name="padding">5</field>
            <field name="company_id" eval="False"/>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
        </record>
    </data>
</odoo>
